fn count_char_occurrences(s: str, c: str): num {
	let i = 0
	let l = length(s)
	let n = 0

	while i < l {
		if s[i] == c {
			set n = n + 1
		}

		set i = i + 1
	}

	return n
}

fn string_contains(s: str, c: str): bool {
	return count_char_occurrences(s, c) != 0 // this could probably be optimized
}

fn abort(msg: str) {
	do print("error: " + msg + "\n")
	do quit(1)
}
